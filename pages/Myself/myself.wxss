.content{
	display: flex;
	flex-direction: column;
  align-items: center;
  justify-content: space-around;
	height: 100vh;
	background-image: url("https://i.loli.net/2020/12/22/SvWA8jLT17CgQOZ.jpg");
	background-size: cover;
	background-repeat: no-repeat;
	flex-wrap: wrap;
  }
  .Content{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-around;
  width: 90%;
  height: 1000rpx;
  background-color: whitesmoke;
  border: royalblue solid 10rpx;
  border-radius: 50rpx;
  }
  .userinfo {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    width: 50%;
    height: 200rpx;
  }
  .userinfo-nickname {
    color: black;
  
  }
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  .ButtonBlock{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    height: 100rpx;
    width: 100%;
  }
  .Button{
    background-color: rgba(0, 0,0, 0);
    text-align: center;
     width: 100rpx;
    height: 100rpx;
    padding: 20rpx 20rpx 20rpx 20rpx;
    background-image: url("https://s3.ax1x.com/2020/12/17/r8yIzj.png");
    background-size: 100% 100%;
  }
  .head{
    width:50%;
    height:210px;
    display: flex;
    justify-content:center;
    align-items: center; 
    position: relative;
  }
  .radarContainer{
    border-radius: 40rpx;
    background-color:purple;
    width:50%;
    height:210px;
    display: flex;
    justify-content:center;
     align-items: center; 
    position: relative;
 }
 .radarCanvas{
    width:200px;
    height:200px;
    margin: 0 auto;
    position: absolute;
 }
 .scroll_display{
  width: 50%;
  height: 20rpx;
  font-size: 35rpx;
  vertical-align: middle;
 }

 .box{
  margin: 40rpx 32rpx;
 }
 .text_box{
  width: 100%;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(87,105,123,1);
  line-height: 48rpx;
 }
 .textFour_box{
  width: 100%;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(87,105,123,1);
  line-height: 26px;
  text-align: justify;
 }
 .toggle-icon {
  width: 25rpx;
  height: 25rpx;
 }
 .text_toggloe_box{
  display: -webkit-box;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0;
 }
 .text_toggle_text{
  font-size: 24rpx;
  color: #333;
  line-height: 32rpx;
  margin-right: 10rpx;
 }
 .three{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
 }